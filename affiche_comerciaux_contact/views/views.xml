<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="Aficherlistecontacts_list_view">
      <field name="name">afichercontacts list</field>
      <field name="model">afichercontacts</field>
      <field name="arch" type="xml">
        <tree editable ="bottom" create="0">
            <field name="comercial_contact_affiche"/>
            <field name="comercial_contact_retirer"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="Aficherlistecontacts_form_view">
      <field name="name">afichercontacts form</field>
      <field name="model">afichercontacts</field>
      <field name="arch" type="xml">
        <form>
          <group>
           <field name="comercial_contact_affiche"/>
           <field name="comercial_contact_retirer"/>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.module.category" id="module_management_users">
            <field name="name">Management de contact</field>
    </record>
    <record id="acces_contact_user" model="res.groups">
            <field name="name">acces aux contacts</field>
            <field name="category_id" ref="module_management_users"/>
    </record>

     <record model="ir.actions.act_window" id="list_contact_day_window_1">
      <field name="name">Contacts</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">tree,form</field>
     </record>
     <menuitem name="RTP" id="list_contact_action_1" parent="contacts.menu_contacts"
      groups="affiche_comerciaux_contact.acces_contact_user"    action="list_contact_day_window_1" sequence="92"/>
    
    <!--
    <record model="ir.actions.act_window" id="list_parc_day_window_1">
      <field name="name">RTP Matériels</field>
      <field name="res_model">fleet.vehicle</field>
      <field name="view_mode">kanban,tree,form</field>
     </record>
     <menuitem name="RTP Matériels" id="list_parc_action_1" parent="fleet.menu_root"
      groups="affiche_comerciaux_contact.acces_contact_user"    action="list_parc_day_window_1" sequence="200"/>
    -->

    <record model="ir.actions.act_window" id="type_Aficher_window">
      <field name="name">Afficher la liste</field>
      <field name="res_model">afichercontacts</field>
      <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="Afficher ou masquer la liste des contacts" id="create_Aficher_action" parent="sale.menu_sale_config"
              action="type_Aficher_window" sequence="91"/>


</data>
</odoo>


