<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="type_leaser_list_view">
      <field name="name">Type leaser list</field>
      <field name="model">typeleaser</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="type_leaser_form_view">
      <field name="name">type leaser form</field>
       <field name="model">typeleaser</field>
        <field name="arch" type="xml">
         <form>
          <group>
            <field name="name"/>
          </group>
        </form>
      </field>
    </record>

  <record model="ir.actions.act_window" id="type_leaser_window">
      <field name="name">Leaser</field>
      <field name="res_model">typeleaser</field>
      <field name="view_mode">tree,form</field>
  </record>
  <menuitem name="Leaser" id="create_typeleaser_action" parent="sale.menu_sale_config"
              action="type_leaser_window" sequence="90"/>

</data>
</odoo>